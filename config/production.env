# Production Deployment Configuration
# This file contains environment-specific settings for production deployment

# Environment Configuration
ENVIRONMENT=production
DEPLOYMENT_STRATEGY=blue-green
KUBERNETES_NAMESPACE=readme-to-cicd
DOCKER_REGISTRY=docker.io
IMAGE_TAG=latest
REPLICAS=3

# Feature Flags
ENABLE_MONITORING=true
ENABLE_BACKUP=true
ENABLE_SSL=true
ENABLE_AUTOSCALING=true
ENABLE_PERFORMANCE_OPTIMIZATION=true

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/readme-to-cicd.crt
SSL_KEY_PATH=/etc/ssl/private/readme-to-cicd.key

# Database Configuration
DATABASE_HOST=postgres-service
DATABASE_PORT=5432
DATABASE_NAME=readme_to_cicd
DATABASE_USER=app_user
DATABASE_SSL=true
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# Cache Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD_SECRET=redis-password
REDIS_DB=0
REDIS_TIMEOUT=5000

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTMANAGER_ENABLED=true
METRICS_RETENTION=30d
LOG_LEVEL=info

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_BUCKET=readme-to-cicd-backups
BACKUP_REGION=us-east-1

# Performance Configuration
PERFORMANCE_MONITORING=true
AUTO_SCALING_MIN_REPLICAS=3
AUTO_SCALING_MAX_REPLICAS=10
CPU_TARGET_UTILIZATION=70
MEMORY_TARGET_UTILIZATION=80

# Security Configuration
SECURITY_SCAN_ENABLED=true
NETWORK_POLICIES_ENABLED=true
POD_SECURITY_POLICIES_ENABLED=true
RBAC_ENABLED=true

# Resource Limits
CPU_REQUEST=500m
CPU_LIMIT=2000m
MEMORY_REQUEST=1Gi
MEMORY_LIMIT=4Gi

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_INITIAL_DELAY=30
HEALTH_CHECK_PERIOD=10
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_FAILURE_THRESHOLD=3

# Ingress Configuration
INGRESS_CLASS=nginx
INGRESS_HOST=readme-to-cicd.example.com
INGRESS_ANNOTATIONS="nginx.ingress.kubernetes.io/ssl-redirect=true,nginx.ingress.kubernetes.io/force-ssl-redirect=true"

# Notification Configuration
NOTIFICATION_EMAIL=ops@example.com
NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NOTIFICATION_ENABLED=true

# Deployment Timeouts
DEPLOYMENT_TIMEOUT=600
ROLLBACK_TIMEOUT=300
HEALTH_CHECK_TIMEOUT=300

# AWS Configuration (if using AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID_SECRET=aws-access-key-id
AWS_SECRET_ACCESS_KEY_SECRET=aws-secret-access-key

# Azure Configuration (if using Azure)
AZURE_SUBSCRIPTION_ID_SECRET=azure-subscription-id
AZURE_CLIENT_ID_SECRET=azure-client-id
AZURE_CLIENT_SECRET_SECRET=azure-client-secret
AZURE_TENANT_ID_SECRET=azure-tenant-id

# GCP Configuration (if using GCP)
GCP_PROJECT_ID=readme-to-cicd-prod
GCP_SERVICE_ACCOUNT_KEY_SECRET=gcp-service-account-key

# Logging Configuration
LOG_FORMAT=json
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
STRUCTURED_LOGGING=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
CUSTOM_METRICS_ENABLED=true

# Tracing Configuration
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://jaeger-collector:14268/api/traces
TRACE_SAMPLING_RATE=0.1

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000