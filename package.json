{
  "name": "readme-to-cicd",
  "version": "1.0.0",
  "description": "Automatically generate optimized GitHub Actions CI/CD workflows from README files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "vitest run tests/e2e/",
    "test:samples": "vitest run tests/samples/",
    "validate:interfaces": "node scripts/validate-interfaces.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "github-actions",
    "ci-cd",
    "readme",
    "automation",
    "workflow-generation"
  ],
  "author": "README-to-CICD Team",
  "license": "MIT",
  "dependencies": {
    "marked": "^9.1.6"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
